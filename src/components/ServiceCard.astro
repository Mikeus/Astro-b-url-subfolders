---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="service-card bg-white shadow-md rounded-lg p-6 hover:shadow-xl transition-all">
  <div class="icon mb-4 text-brand-green text-4xl">
    {/* Replace with actual icon logic */}
    {icon}
  </div>
  <h3 class="text-2xl font-bold mb-2 text-brand-blue">{title}</h3>
  <p class="text-gray-600">{description}</p>
</div>
