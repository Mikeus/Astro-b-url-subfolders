---
import Layout from '../layouts/MainLayout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import CityCard from '../components/CityCard.astro';

const services = [
  { 
    title: 'Residential Cleaning', 
    description: 'Comprehensive home cleaning for Raleigh families',
    icon: 'home'
  },
  { 
    title: 'Deep Cleaning', 
    description: 'Thorough, detailed cleaning for every corner',
    icon: 'sparkle'
  }
];

const serviceCities = [
  'Raleigh', 'Cary', 'Durham', 'Chapel Hill', 
  'Apex', 'Holly Springs', 'Garner'
];
---

<Layout title="Ever Clean House - Professional Cleaning Services in Raleigh, NC">
  <main class="container mx-auto px-4 py-8">
    <section class="hero text-center mb-12">
      <h1 class="text-4xl font-bold text-brand-blue mb-4">
        Professional House Cleaning Services in Raleigh
      </h1>
      <p class="text-xl text-gray-600">
        Trusted, Reliable, and Thorough Cleaning for Your Home
      </p>
    </section>

    <section class="services grid md:grid-cols-2 gap-6 mb-12">
      {services.map(service => (
        <ServiceCard 
          title={service.title} 
          description={service.description}
          icon={service.icon}
        />
      ))}
    </section>

    <section class="cities mb-12">
      <h2 class="text-3xl font-bold text-center mb-6">
        Serving Triangle Area Cities
      </h2>
      <div class="grid md:grid-cols-3 gap-4">
        {serviceCities.map(city => (
          <CityCard city={city} />
        ))}
      </div>
    </section>

    <section class="about bg-brand-gray p-8 rounded-lg">
      <h2 class="text-3xl font-bold text-center mb-6">
        Who We Are
      </h2>
      <p class="text-center text-lg">
        Ever Clean House is a locally owned cleaning service dedicated to 
        providing top-quality cleaning solutions for homes in the Raleigh 
        and Triangle area. With meticulous attention to detail and a 
        commitment to customer satisfaction, we transform your living spaces.
      </p>
    </section>
  </main>
</Layout>
